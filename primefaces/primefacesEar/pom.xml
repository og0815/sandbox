<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>de.ltux</groupId>
    <artifactId>primefacesEar</artifactId>
    <version>1.0-SNAPSHOT</version>
    <packaging>ear</packaging>

    <name>primefacesEar</name>

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    </properties>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.6.1</version>
                <configuration>
                    <source>1.8</source>
                    <target>1.8</target>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-ear-plugin</artifactId>
                <version>2.10.1</version>
                <configuration>
                    <version>7</version>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.openejb.maven</groupId>
                <artifactId>tomee-maven-plugin</artifactId>
                <version>1.7.0</version>
                <configuration>
                    <finalName>${app.name}</finalName>
                    <tomeeVersion>1.7.0</tomeeVersion>
                    <tomeeClassifier>plus</tomeeClassifier>
                    <libs>
                        <lib>org.hibernate:hibernate-validator:4.3.2.Final</lib>
                        <lib>org.hibernate:hibernate-entitymanager:4.2.15.Final</lib>
                        <lib>org.hibernate:hibernate-core:4.2.15.Final</lib>
                        <lib>org.hibernate:hibernate-c3p0:4.2.15.Final</lib>
                        <lib>org.hibernate:hibernate-search:4.4.3.Final</lib>
                        <lib>org.hibernate:hibernate-search-engine:4.4.3.Final</lib>
                        <lib>org.hibernate.common:hibernate-commons-annotations:4.0.4.Final</lib>
                        <lib>joda-time:joda-time:2.3</lib>
                        <lib>org.jboss.logging:jboss-logging:3.1.0.GA</lib>
                        <lib>org.javassist:javassist:3.15.0-GA</lib>
                        <lib>dom4j:dom4j:1.6.1</lib>
                        <lib>antlr:antlr:2.7.7</lib>
                        <lib>remove:asm</lib>
                        <lib>remove:bval-core</lib>
                        <lib>remove:bval-jsr303</lib>
                        <lib>remove:commons-lang-2.6</lib>
                        <lib>remove:openjpa</lib>
                        <lib>remove:serp</lib>
                    </libs>
                </configuration>
            </plugin>
        </plugins>
    </build>
    <dependencies>
        <dependency>
            <groupId>de.ltux</groupId>
            <artifactId>primefacesOne</artifactId>
            <version>1.0-SNAPSHOT</version>
            <type>war</type>
        </dependency>
        <dependency>
            <groupId>de.ltux</groupId>
            <artifactId>primefacesTwo</artifactId>
            <version>1.0-SNAPSHOT</version>
            <type>war</type>
        </dependency>
    </dependencies>
</project>
